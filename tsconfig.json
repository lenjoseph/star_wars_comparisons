{
    "compilerOptions": {
        "outDir": "/dist",
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noResolve": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "ES5", "ES6", "DOM", "DOM.Iterable"
        ]
    },
    "exclude": [
        "./node_modules/**/*"
    ]
}